<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="10sp"
    app:layout_constraintStart_toEndOf="parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:layout_marginTop="50sp"
        android:text="Moscow" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/night_full_moon_rain" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/description_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="description" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/temperature_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="30 C" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/pressure_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="Давление" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/pressure_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="pressure" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/humidity_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="humidity" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/humidity_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="humidity" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/temp_min_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="temp_min" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/temp_min_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="temp_min" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/temp_max_info_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:text="temp_max" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/temp_max_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0sp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="temp_max" />

    </LinearLayout>

</androidx.cardview.widget.CardView>